{
    "name": "expressolang",
    "displayName": "expressolang",
    "description": "",
    "version": "0.0.1",
    "publisher": "cxuesong",
    "repository": {
        "type": "git",
        "url": "https://github.com/CXuesong/LanguageServer.NET"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onLanguage:expresso"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "languages": [
            {
                "id": "expresso",
                "aliases": [
                    "Expresso"
                ],
                "extensions": [
                    ".exs"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "expressoLanguageServer.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "expressoLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VSCode and the demoLanguageServer service."
                }
            }
        }
    },
    "extensionDependencies": [],
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.14",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "vscode-languageclient": "^4.1.3"
    }
}
